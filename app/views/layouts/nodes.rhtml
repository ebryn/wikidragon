<body>
  <div id="container">
    <div id="header"><a href="/" title="Home"><img src="/images/open_source_genius_club.jpg" border="0" /></a></div>
    <div id="main">

      <!-- Buttons and Top Content -->
      <div id="content-header"> 
        <% if @nodes %>
        <div id="button-left"><img src="/images/buttons_create.jpg" alt="Create Button" border="0" usemap="#Map" />
          <map name="Map" id="Map"><area shape="circle" coords="100,36,17" href="/nodes/new" title="Create a new node" /></map></div>
          <% end %>
          <% if controller.action_name == 'show' %>
          <div id="button-right"><img src="/images/buttons_remix.jpg" alt="Remix Button" border="0" usemap="#Map2" />
            <map name="Map2" id="Map2"><area shape="circle" coords="199,36,17" href="/nodes/edit/<%= @node.id %>" /></map></div>
            <% end %>
            <div id="top-content">
              <div>
                <small>[ 0.2 beta ]</small>
              </div>
              <%= flash_msg :error %>
              <%= flash_msg :notice %>
              <%= flash_msg :success %>
            </div>
          </div> 
          <!-- end content-header -->


          <div id="content">

            <div id="licence"> 
			  &nbsp;
            </div>

