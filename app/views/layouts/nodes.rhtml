    font-size: 70%;
    color:#444;
  }
  .h0, h1, h2, h3
  {
    font-family: copperplate gothic bold, trebuchet ms, verdana, arial, helvetica, sans-serif;
  }
  div.h0
  {
    font-size: 1.61803em; 
    font-weight: normal;
    text-align: center;
    color: #7D004E; 
	text-align: center;
  }
  h1
  {
    font-size: 1.44em; 
    font-weight: bold;
    border-bottom: 2px solid #bbb;
    margin-top: 1em;
    padding-top: .2em;
    padding-bottom: .2em;
    border-top: 2px dotted #AAA;
    border-bottom: 2px dotted #AAA;
  }
/*  ul, li
  {
    margin: 0; 
    padding: 0; 
    border: 0; 
    outline: 0; 
    list-style: none;
  }                     */
  li
  {
    margin-left: 0em;
    margin-right: 0em;
    margin-top: .34em;
    margin-bottom: .34em; 
  }                     
  a:link, a:active {
    color:ff00ff;
    text-decoration:none;
  }
  a:visited {
    color:#CC00FF;
    text-decoration:none;
  }
  a:hover {
    color:#FF9900;
    text-decoration:underline;
  }
  input[type="text"], textarea {
    width: 100%;
  }

  .top-pad { 
    margin-top: 2em;
  }

  .flash-msg 
  { 
    font-size: 125%; 
    width: 95%; 
    padding: 1em; 
    margin-top: 1.44em;
  }

  .flash-msg.success, .flash-msg.notice 
  { 
    background-color: #CFC; 
    border: 1px solid #080; 
    color: #060; 
  }

  .flash-msg.error 
  { 
    background-color: #FDD; 
    border: 1px solid #B00; 
    color: #B00; 
  }

  /* diffs */
  .diff-header {
  }                 

  div.diffs { 
    background-color: #AAA; 
    padding: 3em;
  }
  .this-node,  .diff_insert, ins { background-color: #FF7; text-decoration: none; }  
  .other-node, .diff_delete, del { text-decoration: line-through; }  

